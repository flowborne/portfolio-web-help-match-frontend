{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["vite/client"],
    "baseUrl": "src",
    "paths": {
      "~components/*":["components/*"],
      "~containers/*":["containers/*"],
      "~types/*":["types/*"],
      "~contexts/*":["contexts/*"],
      "~hooks/*":["hooks/*"],
      "~layouts/*":["layouts/*"],
      "~pages/*":["pages/*"],
      "~assets/*":["assets/*"],
      "~themes/*":["themes/*"],
      "~services/*":["services/*"],
      "~data/*":["providers/*"],
      "~translations/*":["translations/*"],
    }
  },
  "include": ["src"]
}
